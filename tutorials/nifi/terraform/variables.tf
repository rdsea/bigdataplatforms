variable "project_id" {
  description = "Google Cloud project ID"
  type        = string
}

variable "region" {
  description = "Google Cloud region"
  type        = string
  default     = "europe-north1"
}

variable "zone" {
  description = "Google Cloud zone"
  type        = string
  default     = "europe-north1-a"
}

variable "bucket_name" {
  description = "The name of the GCS bucket"
  type        = string
}
